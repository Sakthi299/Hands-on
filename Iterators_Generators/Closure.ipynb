    "# 5. Calling higher order functions\n",
    "def add(no_1,no_2):\n",
    "    return no_1+no_2\n",
    "def sub(no_1,no_2):\n",
    "    return no1-no2\n",
    "def mul(no_1,no_2):\n",
    "    return no_1*no_2\n",
    "def div(no_1,no_2):\n",
    "    return no_1/no_2"
   ]
  },
  {
