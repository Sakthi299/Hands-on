    "# 3. Closure define\n",
    "def convertor(cm):\n",
    "    def metre_milli(key):\n",
    "        if(key=='M'):\n",
    "            return cm/100\n",
    "        elif(key=='m'):\n",
    "            return cm*10\n",
    "    return metre_milli"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 13,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
